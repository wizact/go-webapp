package components

templ Header(name string) {
	<!-- Header -->
	<header class="fixed top-0 left-0 right-0 bg-blue-600 text-white z-50 shadow-lg bg-blue-600 text-white p-4">
		<div class="container mx-auto flex justify-between items-center">
			<h1 class="text-lg font-bold">My Website</h1>
            if (name != "") {
                <div>Hello, { name }</div>
            }
		</div>
		@Navigation()
	</header>
}
